<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.fintech.ternaku.DetailTernakActivity"
    tools:showIn="@layout/activity_detail_ternak">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ID Ternak"
        android:id="@+id/txtIDTernak"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nama Ternak"
        android:id="@+id/txtNamaTernak"

        android:layout_below="@+id/txtIDTernak"
        android:layout_alignStart="@+id/txtIDTernak"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jenis Kelamin"
        android:id="@+id/txtJenisKelamin"
        android:layout_below="@+id/txtNamaTernak"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Berat"
        android:id="@+id/txtBeratLahir"
        android:layout_below="@+id/txtJenisKelamin"
        android:layout_alignStart="@+id/txtJenisKelamin"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tinggi Lahir"
        android:id="@+id/textView8"
        android:layout_below="@+id/txtBeratLahir"
        android:layout_alignStart="@+id/txtBeratLahir"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:hint="Panjang"
        android:id="@+id/txtPanjang"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Jenis"
        android:id="@+id/txtJenis"
        android:layout_below="@+id/txtPanjang"
        android:layout_alignStart="@+id/txtPanjang"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Negara Asal"
        android:id="@+id/txtNegaraAsal"
        android:layout_below="@+id/txtBreed"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/txtBreed" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Spesies"
        android:id="@+id/txtSpesies"
        android:layout_below="@+id/txtHargaBeli"
        android:layout_alignStart="@+id/txtHargaBeli"
        android:layout_alignEnd="@+id/txtHargaBeli" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Breed"
        android:id="@+id/txtBreed"
        android:layout_below="@+id/txtSpesies"
        android:layout_alignStart="@+id/txtSpesies"
        android:layout_alignEnd="@+id/txtSpesies" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Warna"
        android:id="@+id/txtWarna"
        android:layout_below="@+id/txtNegaraAsal"
        android:layout_alignStart="@+id/txtNegaraAsal"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Harga Beli"
        android:id="@+id/txtHargaBeli"
        android:layout_below="@+id/txtJenis"
        android:layout_alignStart="@+id/txtJenis"
        android:layout_alignEnd="@+id/txtJenis" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ID Ternak"
        android:id="@+id/textView7"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtNamaTernak" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nama"
        android:id="@+id/textView9"
        android:layout_alignBottom="@+id/txtNamaTernak"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jenis Kelamin"
        android:id="@+id/textView10"
        android:gravity="left|center"
        android:layout_alignTop="@+id/txtJenisKelamin"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtBeratLahir" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Berat"
        android:id="@+id/textView11"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/textView8"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tinggi"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView8"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Panjang"
        android:id="@+id/textView13"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtJenis"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jenis"
        android:id="@+id/textView14"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtJenis"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Harga Beli"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_above="@+id/txtSpesies" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Spesies"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtSpesies"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Breed"
        android:id="@+id/textView17"
        android:layout_alignTop="@+id/txtBreed"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/txtNegaraAsal"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Negara Asal"
        android:id="@+id/textView18"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtNegaraAsal"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Warna"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView18"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtWarna"
        android:gravity="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPenjual"
        android:hint="Penjual"
        android:layout_alignStart="@+id/txtWarna"
        android:layout_alignEnd="@+id/txtWarna"
        android:layout_below="@+id/textView19" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Penjual"
        android:id="@+id/textView20"
        android:layout_alignTop="@+id/txtPenjual"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/txtPenjual"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Lihat Transaksi Penjualan"
        android:id="@+id/txtLihatPenjualan"
        android:layout_below="@+id/txtPenjual"
        android:layout_alignEnd="@+id/txtPenjual"
        android:layout_alignStart="@+id/txtPenjual"
        android:textColor="#3366BB" />

</RelativeLayout>
</ScrollView>
