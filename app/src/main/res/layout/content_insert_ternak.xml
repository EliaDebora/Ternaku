<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.fintech.ternaku.InsertTernakActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Isikan nama ternak disini"
        android:id="@+id/nama_ternak"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view1" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#95a5a6"
        android:layout_below="@+id/nama_ternak"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Nama"
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Berat"
        android:textColor="@color/colorPrimary"

        android:id="@+id/textView2"
        android:layout_below="@+id/view1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Isikan berat ternak disini"
        android:id="@+id/berat_ternak"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view2" />
    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#95a5a6"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/berat_ternak"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Jenis Kelamin Ternak"
        android:textColor="@color/colorPrimary"

        android:id="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view2" />


    <RadioGroup
        android:id="@+id/radioSex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/view2"
        android:layout_below="@+id/textView5">

        <RadioButton
            android:id="@+id/radioBetina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Betina"
            android:checked="true"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true" />

        <RadioButton
            android:id="@+id/radioJantan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jantan"
            android:layout_below="@+id/radioBetina"
            android:layout_alignParentStart="true"
            android:checked="false" />


    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tanggal Lahir"
        android:id="@+id/textView4"
        android:textColor="@color/colorPrimary"

        android:layout_marginTop="23dp"
        android:layout_below="@+id/radioSex"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtTgl"
        android:text="09 September 2016"
        android:layout_marginTop="5dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/view3"
        android:layout_toEndOf="@+id/textView3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_calendar_month"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <View
        android:id="@+id/view3"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#95a5a6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
