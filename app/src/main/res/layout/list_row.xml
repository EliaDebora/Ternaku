<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!--  ListRow Left sied Thumbnail image -->


    <!-- Title Of Song-->
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="70dip"
        android:layout_height="90dip"
        android:src="@drawable/cowgreen"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/txtberat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="20dip"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignEnd="@+id/list_image"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/list_image"
        android:layout_alignBottom="@+id/list_image"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="15dip" />

    <!-- Artist Name -->
    <TextView
        android:id="@+id/txtProduction"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#343434"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Production"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtberat"
        android:gravity="center"
        android:layout_marginBottom="10dip" />

    <!-- Rightend Duration -->

    <!-- Rightend Arrow -->

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imgIconHeat"
        android:src="@drawable/heatimprecise00"
        android:layout_alignTop="@+id/txtStatusHeat"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Imprecise probable heat"
        android:id="@+id/txtStatusHeat"
        android:layout_below="@+id/txtProduction"
        android:layout_toEndOf="@+id/imgIconHeat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="05/04/2016"
        android:id="@+id/txtTglHeat"
        android:layout_below="@+id/txtProduction"
        android:layout_alignEnd="@+id/txtProduction" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/txtProduksiSusu"
        android:textSize="35dp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/txtberat"
        android:layout_alignEnd="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Hari Produksi Susu"
        android:id="@+id/textView6"
        android:textSize="10dip"
        android:textColor="@color/colorPrimary"
        android:layout_alignBottom="@+id/txtberat"
        android:layout_toEndOf="@+id/imgIconHeat" />

</RelativeLayout>
